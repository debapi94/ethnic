<audio id="ethnic_bgm" src="https://ethnic-audio.s3.ap-south-1.amazonaws.com/bgm.mp3" loop></audio>
<script>
    document.addEventListener('scroll', musicPlay);
        let vid = document.querySelector("#ethnic_bgm");
    let bgm_sound = document.querySelector("#bgm_sound");
    let bgm_mute = document.querySelector("#bgm_mute");
    bgm_sound.addEventListener('click', pause);
    bgm_mute.addEventListener('click', play);
        bgm_mute.style.display='block';
        bgm_sound.style.display='none';
        vid.volume = 0.05;

    function musicPlay(e) {
            bgm_mute.style.display='none';
            bgm_sound.style.display='block';
            vid.play();
            document.removeEventListener('scroll', musicPlay);
    }
    function pause() {
        bgm_sound.style.display='none';
        bgm_mute.style.display='block';
        vid.pause();
    }
    function play() {
        bgm_sound.style.display='block';
        bgm_mute.style.display='none';
        vid.play();
    }
</script>
